@model PersonalVideoGameLibrary.Models.ViewModels.UpdateVideoGame

@{
    ViewBag.Title = "Edit";
}

<h2>Update Videogame</h2>
<nav>
    <ul>
        <li><a href="/VideoGame/List">Go back to list</a></li>
        <li><a style="color:#ab2020;" href="/VideoGame/DeleteConfirm/@Model.SelectedVideoGame.VideoGameID">Delete</a></li>
    </ul>
</nav>
<form action="/VideoGame/Update/@Model.SelectedVideoGame.VideoGameID" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div style="display:none">
                <!--Pass through the videogame ID-->
                <input type="text" name="VideoGameID" value="@Model.SelectedVideoGame.VideoGameID" />
            </div>
            <div>
                <label>Name:</label> <input type="text" name="VideoGameName" value="@Model.SelectedVideoGame.VideoGameName" />
            </div>
            <div>
                <label>Price:</label> <input type="number" step="0.01" name="VideoGamePrice" value="@Model.SelectedVideoGame.VideoGamePrice" />
            </div>
            <div>
                <label>Hours:</label> <input type="number" name="VideoGameHour" value="@Model.SelectedVideoGame.VideoGameHours" />
            </div>
            <div>
                <!--This is done so that you can assign sessionMsgs to a video game-->
                <label>Session Messages</label>
                <select name="SessionMsg">
                    @foreach (var sessions in Model.SelectedMsg)
                    {
                        var selected = "";
                        if (sessions.VideoGameID == Model.SelectedVideoGame.VideoGameID)
                        {
                            selected = "Selected";
                        }
                        <option value="@sessions.SessionID" @selected>@sessions.SessionMsg</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <input type="file" name="VideoGamePic" />
        </div>
    </div>
    <div>
        <input type="submit" value="Update Video Game"/>
    </div>
</form>
