@model IEnumerable<PersonalVideoGameLibrary.Models.SessionDto>
<!--May not need this check bach later-->
@{
    ViewBag.Title = "Create";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/common_styles.css")
</head>

<h2>Create Videogame</h2>

<a class="shared-btn" href="/VideoGame/List">Go back to list</a>

<form action="/VideoGame/Create" method="POST">
    <div>
        <label class="labelStyle">Videogame Name:</label> <input type="text" name="VideoGameName" />
    </div>
    <div>
        <label class="labelStyle">Videogame Price</label> <input type="number" step=".01" name="VideoGamePrice" />
    </div>
    <div>
        <label class="labelStyle">Videogame Hour</label> <input type="number" name="VideoGameHours" />
    </div>
    <div>
        <label class="labelStyle">Add a Session Message</label>
        <input type="text" name="SessionMsg" />
    </div>
    <div>
        <input class="shared-btn" type="submit" value="Add Videogame"/>
    </div>
</form>
