@model IEnumerable<PersonalVideoGameLibrary.Models.ConsoleDto>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
   <a class="btn btn-default" @Html.ActionLink("Create New", "New") </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConsoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="Console/Details/@item.ConsoleID">@Html.DisplayFor(modelItem => item.ConsoleName)</a>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ConsoleID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ConsoleID }) |
            @Html.ActionLink("Delete", "DeleteConfirm", new { id=item.ConsoleID })
        </td>
    </tr>
}

</table>
