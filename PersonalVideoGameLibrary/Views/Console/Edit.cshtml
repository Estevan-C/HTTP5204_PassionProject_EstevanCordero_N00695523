@model PersonalVideoGameLibrary.Models.ConsoleDto

@{
    ViewBag.Title = "Edit";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/common_styles.css")
</head>

<h2>Update Console</h2>

<nav>
    <ul class="options">
        <li><a class="shared-btn" href="/Console/List">Go back to list</a></li>
        <li><a class="shared-btn" style="color:#ab2020;" href="/Console/DeleteConfirm/@Model.ConsoleID">Delete</a></li>
    </ul>
</nav>
<p>
    <form action="/Console/Update/@Model.ConsoleID" method="POST">
        <div style="display:none">
            <!--Pass through the Console ID-->
            <input type="text" name="ConsoleID" value="@Model.ConsoleID" />
        </div>
        <div>
            <label class="labelStyle">Console Name:</label> <input type="text" name="ConsoleName" value="@Model.ConsoleName" />
        </div>
        <div>
            <input class="shared-btn" type="submit" value="Update Console" />
        </div>
    </form>
</p>