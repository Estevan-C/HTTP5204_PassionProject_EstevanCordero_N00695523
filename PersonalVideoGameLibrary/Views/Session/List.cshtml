@model IEnumerable<PersonalVideoGameLibrary.Models.SessionDto>

@{
    ViewBag.Title = "List";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/common_styles.css")
</head>

<h2>List</h2>

<p>
    <a class="shared-btn" @Html.ActionLink("Create New", "New") </a>
</p>
<table class="table">
    <tr>
        <th>
            Messages Saved
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SessionMsg)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SessionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SessionID }) | 
            @Html.ActionLink("Delete", "DeleteConfirm", new { id=item.SessionID })
        </td>
    </tr>
}

</table>
